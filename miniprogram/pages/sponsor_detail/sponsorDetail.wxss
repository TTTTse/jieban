/* miniprogram/pages/sponsor_detail/sponsorDetail.wxss */
page,.zr_sponsorDetail {
  height: 100%;
  background-color: #f3f8f6;
}
.zr_sponsorDetail_info{
  background-color: #ffffff;
  overflow: hidden;
  border-bottom: 1px solid #dfe4e5;
}
.zr_sponsorDetail_avatar {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 30rpx auto 20rpx;
}

image {
  width: 100%;
  height: 100%;
}

.zr_sponsorDetail_name{
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.zr_sponsorDetail_intro {
  width: 690rpx;
  margin: 0 auto; 
  font-size: 32rpx;
  letter-spacing: 4rpx;
  /* height: 120rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.zr_sponsorDetail_follow{
  margin: 0 auto;
  text-align: center;
  border-radius: 16rpx;
  background-color: #0752aa;
  color: #fff;
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 30rpx;
}
.zr_sponsorDetail_follow.on{
  border: 1px solid #0752aa;
  background-color: #ffffff;
  color: #0752aa;
}

.zr_sponsorDetail_openOrClose{
  text-align: center;
  margin: 16rpx 0; 
  font-size: 30rpx;
  color: #a4a4a4;
}

.zr_sponsorDetail_shalons{
  width: 650rpx;
  margin: 0 auto;
  background-color: #ffffff;
  border-bottom: 1px solid #dfe4e5;
  overflow: hidden;
  padding: 30rpx;
  margin-bottom: 16rpx;
  border-radius: 10rpx;
  position: relative;
}

.zr_sponsorDetail_shalonTitle{
  font-size: 32rpx;
  font-weight: 800;
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
}

.zr_sponsorDetail_salonNums{
  font-size: 32rpx;
  font-weight: 800;
  color: #403f7c;
  padding: 30rpx 0 30rpx 20rpx;
}

.zr_sponsorDetail_salonPoster{
  width: 260rpx;
  height: 160rpx;
  float: left;
  margin-right: 10rpx;
}
.zr_sponsorDetail_salonInfo{
  font-size: 28rpx;
  color: #acb0ac;
}
.zr_sponsorDetail_joinsInfo{
line-height: 30rpx;
height: 60rpx;
width: 350rpx;
float: left;
}
.zr_sponsorDetail_isStil{
  font-size: 30rpx;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  color: #acb0ac;

}