/* miniprogram/pages/editor/editor.wxss */
page{
 background-color: #f3f8f6;
}
.content{
  background-color: #fff;
  overflow: hidden;
  border-bottom: 1px dashed #eee;
  width: 710rpx;
  margin: 0 auto;
  border-radius: 8rpx;
}
.title{
  padding: 30rpx;
}
.img{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 30rpx 12rpx 30rpx 30rpx;
}
.row{
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}
.row text{
  flex-grow: 1;
  text-align: right;
}
.row input{
  font-size: 0.7rem;
  color: rgba(121, 139, 70, 0.979);
  flex-grow: 3;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
}

image{
  width: 100%;
  height: 100%;
}
.row button{
  padding: 0 2rem;
}
