/* miniprogram/pages/salon_detail/salon_detail.wxss */
 page .zr_main{
  width: 100%;
  position: relative;
}
.zr_main_thumb{
  height: 570rpx;
  width: 100%;
}
image{
  width: 100%;
  height: 100%;
}
.zr_main_info{
  width: 90%;
  border-radius: 2%;
  background-color: #fff;
  position: absolute;
  top: 500rpx;
  left: 50%;
  margin-left: -45%;
  font-size: 30rpx;
}
.above{
  position:relative;
  top: 20rpx;
  left: 30rpx;
  margin-bottom: 20rpx;
}
.title{
  font-size: 32rpx;
  font-weight: 700;
}
.time{
  margin: 15rpx auto 10rpx;
  opacity: 0.8;
}
.deadline{
  margin: 10rpx auto;
  opacity: 0.8;
}
.addr{
  margin: 10rpx auto;
  opacity: 0.8;
}
.people{
  margin: 10rpx auto;
  opacity: 0.8;
}
.cost{
  margin: 10rpx auto;
  opacity: 0.8;
}
.middle{
  opacity: 0.5;
}
.below{
  margin-left: 30rpx;
  overflow: hidden;
}
.left{
  overflow: hidden;
  float: left;
}
.join{
  float: left;
}
.right{
  overflow: hidden;
  float: left;
  margin-left: 100rpx;
}
.hobby{
  float: left;
}
.zr_main_detail{
  width: 90%;
  position: relative;
  top: 400rpx;
  left: 30rpx;
  right: 30rpx;
}
.detail{
  font-size:30rpx;
  font-weight:330;
}
.container{
  font-size: 35rpx;
  text-overflow: ellipsis;
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.openOrClose{
  text-align: center;
  margin: 16rpx 0; 
  font-size: 30rpx;
  color: #a4a4a4;
}
.zr_main_guest{
  position: relative;
  top:400rpx;
  left:30rpx;
}
.honor{
  font-size: 30rpx;
  font-weight: 320;
}
.guest{
  font-size: 30rpx;
  margin-left: 200rpx;
  font-weight: 300;
}
.sponsorNum{
  font-size: 30rpx;
  font-weight: 320;
  margin-bottom: 15rpx;
}
.sponsor{
  background-color: #fff;
  width: 90%;
  font-size: 30rpx;
}
.intro{
  margin-bottom: 20rpx;
}
.imgNow{
  font-size: 30rpx;
}
.imgN{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 250rpx;
  margin-top: 20rpx;
}
.titleNow{
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.guangzhu{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.bottomBar{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
  background-color: #fff;
  overflow: hidden;
}
.btb_content{
  font-size: 32rpx;
  font-weight: 800;
  overflow: hidden;
  flex: 1;
}
.btb_all{
  overflow: hidden;
  float: left;
  margin-top:  30rpx;
}
.btb_icon{
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.btb_text{
  float: left;
  line-height: 40rpx;
}

.btn{
  padding: 16rpx 50rpx;
  margin-top: 16rpx;
  background-color: #eee;
  color: #aab0ab;
}