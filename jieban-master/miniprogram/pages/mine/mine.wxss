  border-bottom: 2px solid #0552ad;
}
.zr_down{
  width: 100%;
  height: 100%;
}
.zr_nothing{
  padding-top: 200rpx;
}
.zr_nothing_img{
  width: 160rpx;
  height: 100rpx;
  margin: 0 auto;
}
.zr_text{
