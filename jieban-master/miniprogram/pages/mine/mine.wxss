/* miniprogram/pages/sponsor/sponsor.wxss */

.zr_sponsor {
  height: 100%;
}
/* 
view {
  border: 1px solid #000;
} */

.zr_container {
  height: 100%;
  background-color: #f3f8f6;
}

.zr_content{
  border-radius: 10rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #dfe4e5;
  width: 720rpx;
  padding: 30rpx 0; 
  margin: 12rpx auto;
}
.zr_sponsor_top {
  margin-left: 30rpx;
  width: 700rpx;
  border-bottom: 1px dashed #dee1e0;
  padding-bottom: 20rpx;
  overflow: hidden;
}

.zr_sponsor_avatar {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-left: 10rpx;
  float: left;
}

image {
  width: 100%;
  height: 100%;
}

.zr_sponsor_nameAndIntro {
  width: 400rpx;
  margin-left: 10rpx;
  float: left;
}

.zr_sponsor_name{
  font-weight: bold;
  margin-bottom: 10rpx;
}

.zr_sponsor_intro {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
}
.zr_sponsor_follow{
  float: left;
  text-align: center;
  border-radius: 16rpx;
  background-color: #0752aa;
  color: #fff;
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 12rpx;
}
.zr_sponsor_follow.on{
  border: 1px solid #0752aa;
  background-color: #ffffff;
  color: #0752aa;
}
.zr_sponsor_bottom{
  padding-top: 24rpx;
  margin-left: 30rpx;
  width: 700rpx;
  font-size: 30rpx;
  overflow: hidden;
  color: #acb0ac;
}

.zr_sponsorDetail_shalons{
  width: 650rpx;
  margin: 0 auto;
  background-color: #ffffff;
  border-bottom: 1px solid #dfe4e5;
  overflow: hidden;
  padding: 30rpx;
  margin-bottom: 16rpx;
  border-radius: 10rpx;
  position: relative;
}

.zr_sponsorDetail_shalonTitle{
  font-size: 32rpx;
  font-weight: 800;
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
}
.zr_sponsorDetail_salonPoster{
  width: 260rpx;
  height: 160rpx;
  float: left;
  margin-right: 10rpx;
}
.zr_sponsorDetail_salonInfo{
  font-size: 28rpx;
  color: #acb0ac;
}
.zr_sponsorDetail_joinsInfo{
line-height: 30rpx;
height: 60rpx;
width: 350rpx;
float: left;
}
.zr_sponsorDetail_isStil{
  font-size: 30rpx;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  color: #acb0ac;

}
.zr_i{
  width: 48rpx;
  height: 48rpx;
  float: left;
  margin-left: 50rpx;
}
.zr_t{
  line-height: 48rpx;
  margin-left: 30rpx;
  float: left;
  font-size: 30rpx;
}
.zr_company{
  overflow: hidden;
  margin-bottom: 20rpx;
}