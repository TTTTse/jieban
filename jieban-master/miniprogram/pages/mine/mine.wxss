/* miniprogram/pages/mine/mine.wxss */
.zr_mine{
  overflow: hidden;
  height: 100%;
}
.zr-up{
  background-color: #fff;
  position: relative;
  overflow: hidden;
  height: 100%;
  margin-bottom: 30rpx;
}
.userName{
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: 800;
}
image{
  width:100%;
  height:100%;
}
.touxiang{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 30rpx auto; 
}
.zr-tabs{
  width:100%;
  padding: 10rpx 0;
  display:flex;
  justify-content:space-around;
}
.zr-up2{
  position: absolute;
  overflow: hidden;
  right: 0;
  top:0;
